<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WpfExplorer.Support;component/Themes/Units/CloseButton.xaml"/>
        <ResourceDictionary Source="/WpfExplorer.Support;component/Themes/Units/MaximizeButton.xaml"/>
        <ResourceDictionary Source="/WpfExplorer.Support;component/Themes/Units/MinimizeButton.xaml"/>
        <ResourceDictionary Source="/WpfExplorer.Support;component/Themes/Units/DarkScrollViewer.xaml"/>
        <ResourceDictionary Source="/WpfExplorer.Support;component/Themes/Units/DarkWindow.xaml"/>
    </ResourceDictionary.MergedDictionaries>  


    <Style TargetType="{x:Type local:ExplorerWindow}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ExplorerWindow}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
